<!-- res/layout/item_notice.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/titleDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noticeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Title : "
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/notice_spacing"/>

        <TextView
            android:id="@+id/noticeDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded on : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/notice_spacing"/>
        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/delete"
            android:contentDescription="Delete"
            android:clickable="true"
            android:focusable="true"
            android:onClick="deleteData"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/noticeImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/titleDateLayout"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/notice_spacing"/>
</RelativeLayout>
