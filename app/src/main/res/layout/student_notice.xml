<!-- res/layout/item_notice.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/titleDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notice_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noticeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/notice_spacing"/>

        <TextView
            android:id="@+id/noticeDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/notice_spacing"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/noticeImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/titleDateLayout"
        android:layout_marginTop="@dimen/notice_spacing"
        android:scaleType="centerCrop"/>
</RelativeLayout>
